{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "jsx": "react-jsx",

    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "skipLibCheck": true,
    "stripInternal": true,

    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "**/*.stories.*",
    ".storybook",
    "node_modules",
    "dist",
    "public"
  ]
}